<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="portrait">

    <android.support.v7.widget.CardView
        android:id="@+id/card_transceiver_item"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        card_view:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="10">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ima_transceiver_photo"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="4"
                app:riv_border_color="@color/white"
                app:riv_corner_radius="1dp"
                app:riv_oval="false"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:paddingBottom="5dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv_transceiver_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/list_title_text_color"
                    android:textSize="18sp"
                    tools:text="Test title"/>

                <TextView
                    android:id="@+id/tv_transceiver_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_transceiver_date"
                    android:layout_below="@id/tv_transceiver_title"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/list_rating_color"
                    android:textSize="12sp"
                    tools:text="7/10"/>

                <TextView
                    android:id="@+id/tv_transceiver_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/list_release_date_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="10-10-2014"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

