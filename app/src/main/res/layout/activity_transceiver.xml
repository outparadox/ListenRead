<LinearLayout
    android:id="@+id/aa"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".uis.activitys.HomeActivity"
    >

    <include layout="@layout/include_toolbar"/>


    <LinearLayout
        android:id="@+id/transceiver_lily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#25272d"
        android:gravity="center"
        >

        <co.mobiwise.library.MusicPlayerView
            android:id="@+id/transceiver_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:buttonColor="#FF0028"
            app:progressEmptyColor="#20FFFFFF"
            app:progressLoadedColor="#00815E"
            app:textColor="#80FFFFFF"
            app:textSize="14sp"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/transceiver_detail_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"/>

</LinearLayout>
